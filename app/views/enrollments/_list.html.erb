<table class="table table-bordered">
  <thead>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% enrollment.each do |enrollment| %>
      <tr>
        <td><%= enrollment.student.first_name %></td>
        <td><%= enrollment.student.last_name %></td>
        <td><%= enrollment.student.email %></td>
        <td><%= link_to 'Destroy', course_enrollment_path(id: enrollment), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
